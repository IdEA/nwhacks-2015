<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@mipmap/trees">

    <!--android:background="#CCD7A2">-->
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:id="@+id/disp_title"
        android:gravity="center"
        android:textSize="40sp"
        android:textColor="@android:color/black"
        android:text="Track your usage!"/>

    <TextView
        android:id="@+id/disp_big"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:gravity="center"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="150sp"
        android:text="4"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="80dp">
        <TextView
            android:layout_width="100dp"
            android:layout_height="fill_parent"
            android:id="@+id/disp_left"
            android:textSize="20sp"
            android:gravity="center"
            android:text="Daily usage"
            android:layout_weight="1"
            />
        <TextView
            android:layout_width="100dp"
            android:layout_height="fill_parent"
            android:id="@+id/disp_mid"
            android:gravity="center"
            android:textSize="20sp"
            android:text="Daily usage"
            android:layout_weight="1"
            />
        <TextView
            android:layout_width="100dp"
            android:layout_height="fill_parent"
            android:id="@+id/disp_right"
            android:gravity="center"
            android:textSize="20sp"
            android:text="Daily usage"
            android:layout_weight="1"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/disp_total"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:gravity="center"
        android:textSize="100sp"
        android:text="42"/>

    <LinearLayout
        android:id="@+id/crouton"
        android:orientation="vertical"
        android:gravity="bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></LinearLayout>
</LinearLayout>