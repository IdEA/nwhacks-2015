<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:background="#ffc8c8c5"
              android:layout_height="match_parent">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="35dp"
        android:textSize="40sp"
        android:text="You have used"/>

    <TextView
        android:id="@+id/pulling_bigtxt"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-40dp"
        android:layout_marginBottom="-40dp"
        android:gravity="center_horizontal"
        android:textColor="#ffcc0000"
        android:textSize="300sp"
        android:text="1"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:gravity="center_horizontal"
        android:text="towels"/>

    <TextView
        android:layout_width="fill_parent"
        android:paddingTop="25dp"
        android:paddingBottom="30dp"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:gravity="center_horizontal"
        android:text="If this was UBC's average usage, students would... "/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/pulling_response"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:textColor="#ffcc0000"
            android:textStyle="italic|bold"
            android:text="Cost UBC $3750 per day"
            android:gravity="center_horizontal"
            android:layout_weight="1"
            />
        <TextView
            android:id="@+id/pulling_response2"
            android:layout_width="400dp"
            android:textStyle="italic|bold"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:textColor="#ffcc0000"
            android:text="Release 1743.75 Kg of carbon"
            android:gravity="center_horizontal"
            android:layout_weight="1"
            />
    </LinearLayout>

</LinearLayout>